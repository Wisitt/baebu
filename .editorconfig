# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# CSS
[*.{css,scss}]
indent_size = 2

# JavaScript
[*.{js,jsx,ts,tsx}]
indent_size = 4

# HTML
[*.html]
indent_size = 2